    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@jest/globals": "^29.7.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "pre-commit": "^1.0.10",
    "prettier": "^3.4.2",
    "semantic-release-preconfigured-conventional-commits": "^1.1.118",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
