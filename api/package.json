{
  "name": "api",
  "version": "1.0.0",
  "description": "API Server for subjekt project",
  "license": "Apache-2.0",
  "author": "Francesco Magnani, Luca Rubboli",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "jest --forceExit --runInBand",
    "start": "node dist/app.js",
    "lint:fix": "eslint src/ --fix",
    "lint:check": "eslint src/",
    "format:write": "prettier --write src/",
    "format:check": "prettier --check src/",
    "check": "npm run lint:check && npm run format:check && npm test && npm run build"
  },
  "engines": {
    "node": "22.13"
  },
  "dependencies": {
    "@mini-roostico/api-common": "file:../common",
    "accesscontrol": "^2.2.1",
    "express": "^4.21.2",
    "express-validator": "^7.2.1",
    "http-status-codes": "^2.3.0",
    "mongoose": "^8.9.5",
    "node-http": "^0.0.5",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "jest": "^29.7.0",
    "pre-commit": "^1.0.10",
    "prettier": "^3.4.2",
    "semantic-release-preconfigured-conventional-commits": "^1.1.118",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0"
  }
